{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "outDir": "dist",
        "lib": [
            "ESNext"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "rootDir": "./src"
    },
    "include": [
        "src/**/*"
    ]
}
